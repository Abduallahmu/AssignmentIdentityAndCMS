@using Microsoft.AspNetCore.Identity
@model CreateUserVM
@{
    ViewData["Title"] = "CreateUser";
}
<h1 id="h11">Create User</h1>
@if (ViewBag.msg != null)
{
    <p style="color:chartreuse">@ViewBag.msg</p>
}
@if (ViewBag.errorlist != null)
{
    <ul>
        @foreach (var item in (IEnumerable<IdentityError>)ViewBag.errorlist)
        {

            <li>@item.Description</li>
        }
    </ul>
}
<div>
    <form asp-action="CreateUser" method="post">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="UserName"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="UserName" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Email" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Password" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="ConfirmPassword"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="ConfirmPassword" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </div>
    </form>
</div>