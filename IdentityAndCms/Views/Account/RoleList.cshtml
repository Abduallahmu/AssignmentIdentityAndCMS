@model List<IdentityRole>
@{
    ViewData["Title"] = "RoleList";
}

<h1 id="h11">Role List</h1>

<a asp-controller="Account" asp-action="AddRole" class="btn btn-primary">Add new role</a>

<table class="w3-table-all w3-card-4">
    <thead>
        <tr>
            <th id="thh">Id</th>
            <th id="thh">Name</th>
            <th id="thh">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="AddUserToRole" asp-route-role="@item.Name">Add Users to role</a>
                </td>
            </tr>
        }
    </tbody>
</table>