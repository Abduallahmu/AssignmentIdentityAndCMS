@model Country

@{
    ViewData["Title"] = "Create Country";
}
<h2 id="h22">Create New Country</h2>
<div>
    <div class="col-md-4">
        <form asp-controller="Country" asp-action="CreateCountry">
            <div class="row form-border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                    <input type="submit" value="Create" class="btn btn-sm btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>